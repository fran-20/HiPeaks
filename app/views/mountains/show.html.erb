<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <p class="h1"><%= @mountain.name %></p>
    </div>

    <div class="col">
      <p class="h1">Lv.<%= @mountain.avg_level %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p class="h5">読み：<%= @mountain.kana %> | 標高：<%= @mountain.height %>m | 山域：<%= @mountain.area %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h1 class="result-rating-rate">
        <span class="star5_rating" data-rate="<%= @mountain.avg_score %>"></span>
        <span class="number_rating"><%= @mountain.avg_score %>点（<%= @mountain.reviews.count %>件のレビュー）</span>
      </h1>
    </div>
  </div>

  <div class="col">
    <p class="h1">
      <%= link_to new_mountain_review_path(@mountain) do %>レビューを書く<% end %>
    </p>
  </div>

  <hr>

  <p class="h1">口コミ</p>

  <% @reviews.each do |review| %>
    <div class="card-body">
      <h5 class="card-title"><%= review.title %></h5>
      <div class="card-text"><%= review.content %></div>
      <div class="star5_rating" data-rate=<%= review.score %>></div>
      <div class="number_rating"><%= review.score %>点</div>
      <div class="card-text">所要時間：<%= ((review.end - review.start) / 3600).round(0) %> 時間 <%= (((review.end - review.start) % 3600) / 60).round(0) %>分</h5>
      <div class="card-text">登った日：<%= review.start.strftime('%Y-%m-%d') %></div>
      <div class="card-text"><small class="text-muted">更新日:<%= review.updated_at.strftime('%Y-%m-%d') %></small></div>
      <div class="card-text"><%= link_to "編集", edit_review_path(review) %></div>
      <div class="card-text"><%= button_to "削除", review_path(review), method: :delete %></div>
    </div>
  <% end %>
</div>