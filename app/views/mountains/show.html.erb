<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <%= @mountain.name %>
            </p>
          </header>
          
          <div class="card-content">
            <p class="result-rating-rate">
              <span class="star5_rating" data-rate="<%= @mountain.avg_score %>"></span>
              <span class="number_rating"><%= @mountain.avg_score %>点（<%= @mountain.reviews.count %>件のレビュー）</span>
            </p>
          </div>
          
        </div>
        <%= render 'reviews/form', review: @review, mountain: @mountain %>
      </div>
    </div>
  </div>
</section>