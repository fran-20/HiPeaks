<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @mountains.each do |mountain| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
                <%= mountain.name %>
              </p>
            </header>
            
            <div class="card-content">
              <p class="result-rating-rate">
                <span class="star5_rating" data-rate="<%= mountain.avg_score %>"></span>
                <span class="number_rating"><%= mountain.avg_score %>点（<%= mountain.reviews.count %>件のレビュー）</span>
              </p>
            </div>
            
            <footer class="card-footer">
              <%= link_to mountain_reviews_path(mountain), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to mountain_path(mountain), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>